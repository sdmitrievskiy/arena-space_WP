.section-security
	display block
	background-color #2d3438
	padding-top 40px
	padding-bottom 40px

	&__title
		text-align center
		color white
		font-family 'Circe Bold'
		font-size 40px

	&__sub-text
		margin-top 5px
		text-align center
		color #00dffd
		font-size 40px
		margin-bottom 30px

	&__feature-list
		width 820px
		margin auto
		ul

			li
				color white
				font-size 24px
				padding-left 30px
				position relative
				width 400px
				margin-bottom 20px

				&:before
					content ''
					display block
					border-style solid
					border-width 10px 0 10px 17.3px
					border-color transparent transparent transparent #00dffd
					position absolute
					top 0
					left 0
