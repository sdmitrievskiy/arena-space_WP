.section-form
	display block
	padding-top 70px
	padding-bottom 50px
	position relative
	//background url(../../images/form_bg.jpg)
	display flex
	justify-content center
	align-items center

	.left
	.right
		flex auto
		background url(../../images/form_bg_2.jpg)
		position relative
		height 550px

	.right
		&:before
			content ''
			display block
			position absolute
			left -285px
			top -40px
			sprite $form_right

	.left
		&:before
			content ''
			display block
			position absolute
			right -285px
			top -43px
			sprite $form_left

	.center
		width 1030px
		width 478px

		height 500px
		//background-color green


	&:after
		content ''
		display block
		width 100%
		height 4px
		background-color white
		box-shadow 0px 1px 10px 2px rgba(255, 255, 255, 0.75)
		position absolute
		bottom 0
		left 0

	&__title
		text-align center
		color #1ab8e8
		font-size 40px
		font-family 'Circe Bold'
		width 800px
		margin auto

		opacity 0

	&__form
		width 460px
		margin auto
		margin-top 110px
		text-align center
		font-family 'Open Sans'
		position relative
		opacity 0

