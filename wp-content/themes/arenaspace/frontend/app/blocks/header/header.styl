.header
	display block
	//margin-top 100px
	//border-top 35px solid #063442
	background-image url(../../images/video.jpg)
	background-repeat no-repeat
	background-size 100%
	height 100vh
	position relative
	top 0
	left 0
	right 0
	bottom 0
	overflow hidden

	video
		position absolute
		top 0
		left 0
		//min-height 100%
		//min-width 100%

		height 100%
		width 100%

	//&:before
	//	content ''
	//	display block
	//	height 13px
	//	background-color #0d7697
	//	background linear-gradient(to right, #065f7c 0%,#0d7697 40%,#0d7697 45%,#065f7c 100%,#096381 100%)

	&:after
		content ''
		display block
		position absolute
		height 13px
		width 100%
		bottom -26px
		background-color #0d7697
		background linear-gradient(to right, #065f7c 0%,#0d7697 40%,#0d7697 45%,#065f7c 100%,#096381 100%)

	h1
		position absolute
		bottom 20px
		width 100%

		text-align center
		font-family 'Circe Bold'
		font-size 50px

		color white
		background-color rgba(0, 0, 0, 0.4)
		padding 35px


@media (min-aspect-ratio: 16/9) {
	.header > video { height: 300%; top: -100%; }
}

@media (max-aspect-ratio: 16/9) {
	.header > video { width: 300%; left: -100%; }
}
	/* Если есть поддержка object-fit (Chrome/Chrome для Android, Safari в iOS 8 и Opera), используем его: */
@supports (object-fit: cover) {
	.header > video {
		top: 0; left: 0;
		width: 100%; height: 100%;
		object-fit: cover;
	}
}