.fixed-menu
	position fixed
	z-index 9990
	top 0
	width 100%
	transform: translateZ(0);
	-webkit-transform: translateZ(0);

	transition: all 0.2s ease-in-out;

	.nav__item
		a
			color white

	&.white
		background-color white
		box-shadow 0px 2px 10px 0px rgba(50, 50, 50, 0.75)



		.wrapper
			padding 15px 40px

			.nav__item

				&:hover
					a
						color white

				a
					color black

					&:hover
						color white





	.wrapper
		display flex
		align-items center
		justify-content space-between

		padding 35px 40px
		transition: all 0.2s ease-in-out;
		//border 1px solid red

	.nav
		transition: all 0.2s ease-in-out;

