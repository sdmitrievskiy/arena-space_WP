.section-inside
	display block
	background-color #2d3438
	margin-top 60px
	padding-top 30px
	position relative
	z-index 2

	&:before
		content ''
		display block
		width 100%
		height 4px
		background-color white
		box-shadow 0px 1px 10px 2px rgba(255, 255, 255, 0.75)
		position absolute
		top 0

	&__title
		text-align center
		color white
		font-family 'Circe Bold'

		font-size 50px

	&__features
		display flex
		justify-content space-around
		margin-top 40px
		padding-left 100px
		padding-right 100px
		padding-bottom 40px
