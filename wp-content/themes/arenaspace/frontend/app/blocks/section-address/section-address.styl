.section-address
	display block
	padding-top 55px
	padding-bottom 90px
	text-align center
	position relative

	&:after
		content ''
		display block
		width 100%
		height 4px
		background-color white
		box-shadow 0px 1px 10px 2px rgba(255, 255, 255, 0.75)
		position absolute
		bottom 0

	&__title
		text-align center
		color white
		font-size 50px
		font-family 'Circe Bold'

	&__text
		width 500px
		margin auto
		margin-top 130px
		color white
		font-size 29px
		position relative

		&:before
			content ''
			display block
			position absolute
			top -95px
			left -355px
			sprite $address_1

		&:after
			content ''
			display block
			position absolute
			top -95px
			right -345px
			sprite $address_2

		.blue
			color #00b7d9
