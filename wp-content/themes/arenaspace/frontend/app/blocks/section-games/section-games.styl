.section-games
	display block
	padding-top 40px
	position relative
	padding-bottom 40px

	&:after
		content ''
		display block
		width 100%
		height 4px
		background-color white
		box-shadow 0px 1px 10px 2px rgba(255, 255, 255, 0.75)
		position absolute
		bottom 0


	&__title
		text-align center
		font-family 'Circe Bold'
		color #1e99c1
		font-size 50px
		letter-spacing 2px
		margin-bottom 30px
		opacity 0.8
